doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title UFARM AO Page
  link(rel='stylesheet' href='styles.css/ufarm.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous')
header#header
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      a.navbar-brand(href='')  U FARM
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(href='index.html') Home
        form.d-flex(role='search')
          input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
          button.btn.btn-outline-success(type='submit') Search
main
  aside#sidebar.sidebar
    ul#sidebar-nav.sidebar-nav
      li.nav-item
        a.nav-link.collapsed(href='#dashboard')
          i.bi.bi-grid
          span Dashboard
      li.nav-item
        a.nav-link.collapsed(href='#register-a-new-farmer')
          i.bi.bi-person
          button.btn(type='button')
            li
              a.nav-link(href='#register-a-new-farmer') Register a New Farmer
      li.nav-item
        a.nav-link.collapsed(href='update-details')
          i.bi.bi-envelope
          button.btn(type='button')
            li
              a.nav-link(href='#update-details') Update Farmer one details 
      li.nav-item
        a.nav-link.collapsed(href='#appoint-new-farmer-one')
          i.bi.bi-card-list
          button.btn(type='button')
            li
              a.nav-link(href='#appoint-new-farmer-one') Appoint new Farmer One
  // Register Farmer One
  h2#register-a-new-farmer Register Farmer 0ne
  form(action='#' method='post')
    label(for='farmerName') Farmer Name:
    input#farmerName(type='text' name='farmerName')
    br
    br
    label(for='ward') ward name 
    select#ward(name='ward')
      option(value='selected') (select one)
      option(value='1') masaja ward 1 
      option(value='2') masajja ward 2
      option(value='2') masajja ward 3
      option(value='2') masajja ward 4
    label(for='reg-date') date of registration:
    input#reg-date(type='date' name='reg-date')
    br
    br
    label(for='DOB') date of birth:
    input#DOB(type='date' name='DOB')
    br
    br
    label(for='age') Input your age (years):
    input#age(type='number' name='age' min='13' max='120')
    br
    label(for='UNIQUE-no') UNIQUE number:
    input#UNIQUE-no(type='text' name='UNIQUE-no' placeholder='eg FO-W101')
    br
    br
    label(for='farmerPhone') Farmer Phone:
    input#farmerPhone(type='text' name='farmerPhone')
    br
    br
    label(for='NIN') NIN number
    input#NIN(type='text' name='NIN')
    br
    br
    label(for='Residence') Residence type
    input#Residence(type='text' name='Residence')
    br
    br
    label(for='Home') Home address
    input#Home(type='text' name='Home')
    br
    br
    label(for='period') Period of stay: 
    input#period(type='number' name='period' min='10' max='120')
    label(for='fo-activities') activities:
    textarea#fo-activities(name='fo-activities' rows='3' cols='30' placeholder='what activities does farmer one deal in')
    h2#AUTHDF Authentication Details FO
    label(for='farmerUsername') Username:
    input#farmerUsername(type='text' name='farmerUsername')
    br
    br
    label(for='UNIQUE-no') UNIQUE number:
    input#UNIQUE-no(type='text' name='UNIQUE-no' placeholder='eg FO-W101')
    br
    br
    label(for='farmerPassword') Password:
    input#farmerPassword(type='password' name='farmerPassword')
    br
    br
    input(type='submit' value='Register')
  hr
  // Update Farmer One's Contact Details
  h2#update-details Update Farmer One&apos;s Contact Details
  form(action='#' method='post')
    label(for='farmerPhone') New Phone Number:
    input#farmerPhone(type='text' name='farmerPhone')
    br
    br
    label(for='fo-activities') activities:
    textarea#fo-activities(name='fo-activities' rows='3' cols='30' placeholder='what activities does farmer one deal in')
    input(type='submit' value='Update Contact Details')
  hr
  // Appoint a New Farmer One
  h2#appoint-new-farmer-one Appoint a New Farmer One
  form(action='#' method='post')
    label(for='newFarmerName') New Farmer Name:
    input#newFarmerName(type='text' name='newFarmerName')
    br
    br
    label(for='newFarmerAddress') New Farmer Address:
    input#newFarmerAddress(type='text' name='newFarmerAddress')
    br
    br
    label(for='newFarmerPhone') New Farmer Phone:
    input#newFarmerPhone(type='text' name='newFarmerPhone')
    br
    br
    label(for='newFarmerEmail') New Farmer Email:
    input#newFarmerEmail(type='email' name='newFarmerEmail')
    br
    br
    label(for='newFarmerUsername') New Username:
    input#newFarmerUsername(type='text' name='newFarmerUsername')
    br
    br
    label(for='newFarmerPassword') New Password:
    input#newFarmerPassword(type='password' name='newFarmerPassword')
    br
    br
    input(type='submit' value='Appoint New Farmer One')
  hr
  // View Farmer One Details
  h2#farmer1-details Farmer One Details
  table
    tr
      th Name
      th Address
      li.nav-item
        a.nav-link.collapsed(href='#dashboard')
          i.bi.bi-person
          button.btn(type='button')
          span back to top
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')
